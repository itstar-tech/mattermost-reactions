{
    "id": "com.mattermost.reactions-plugin",
    "name": "Reactions Plugin",
    "description": "A plugin that sends webhooks when reactions are added or removed in monitored channels.",
    "homepage_url": "https://github.com/mattermost/mattermost-reactions-plugin",
    "support_url": "https://github.com/mattermost/mattermost-reactions-plugin/issues",
    "icon_path": "assets/icon.svg",
    "version": "0.1.0",
    "min_server_version": "7.9.0",
    "server": {
        "executables": {
            "linux-amd64": "server/dist/plugin-linux-amd64",
            "linux-arm64": "server/dist/plugin-linux-arm64",
            "darwin-amd64": "server/dist/plugin-darwin-amd64",
            "darwin-arm64": "server/dist/plugin-darwin-arm64",
            "windows-amd64": "server/dist/plugin-windows-amd64.exe"
        },
        "executable": ""
    },
    "webapp": {
        "bundle_path": "webapp/dist/main.js"
    },
    "settings_schema": {
        "header": "Configuración del Plugin de Reacciones",
        "footer": "Este plugin envía webhooks cuando se agregan o quitan reacciones en canales donde el bot está presente.",
        "settings": [
            {
                "key": "WebhookURL",
                "display_name": "URL del Webhook Saliente",
                "type": "text",
                "help_text": "URL donde se enviarán las notificaciones de reacciones (debe ser una URL válida que comience con http:// o https://)",
                "placeholder": "https://example.com/webhook",
                "default": ""
            }
        ]
    }
}
